---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={"Otterly Omari"} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
		<script src="/src/scripts/hackermantm.js"></script>
		<Header />
		<main id="content">
			<div id="home-section">
				<a href="/">
					<img src="/logo.png" class="image">
				</a>
				<br>
				<h5 class="t-outline" style="text-align: center;">the cute motherfluffer your mom warned you about</h5>
				<ul id="showcase">
					<h1 class="t-outline" style="text-align: center;">Coming Soon</h1>
				</ul>
				<br>
				<button><a href="/" class="no-deco"><h4 class="t-outline">Go Back</h4></a></button>
			</div>
		</main>
		<style>
			main {
				backdrop-filter: blur(0.4rem);
				z-index: 9999;
				background-color: transparent;
			}

			ul {
				list-style: none;
			}

		</style>
	</body>

</html>
