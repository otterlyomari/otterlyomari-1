---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={"Otterly Omari"} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
		<script src="/src/scripts/hackermantm.js"></script>
		<Header />
		<main id="content">
			<div id="home-section">
				<a href="/">
					<img src="/logo.png" class="image">
				</a>
				<br>
				<h5 class="t-outline" style="text-align: center;">the cute motherfluffer your mom warned you about</h5>
				<div id="container">
					<section id="section">
						<h4 class="t-outline" style="text-align: center;">About me</h4>
						<p class="t-outline" style="text-align: center; color: white;">Hi there! It's me, your friendly neighborhood otter, Omari! 
						</br> Welcome to my website! Now that you're here, I'd like to tell you a bit about myself</p>
					</section>
				</div>
				<button><a href="/" class="no-deco"><h4 class="t-outline">Go Back</h4></a></button>
		</main>
		<style>
			main {
				backdrop-filter: blur(0.4rem);
				z-index: 9999;
				background-color: transparent;
			}

			#section {
				width: 100%; /* Adjust as needed */
				margin: 0 auto;
				backdrop-filter: blur(0.6rem);
			}

			#container {
				display: flex;
				justify-content: center; /* Centers horizontally */
				align-items: center; /* Centers vertically */
				height: 100vh; /* Adjust as needed */
				padding-bottom: 600px; /* Adjust as needed - the higher the px value, the higher up the #section element will be */
			}

		</style>
	</body>

</html>
